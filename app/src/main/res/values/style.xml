<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SideMenuContainer">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/blue_dark</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StationCard">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="flexDirection">column</item>
        <item name="android:elevation">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="justifyContent">space_between</item>
    </style>

    <style name="StationsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ScenesContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LogoContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="NucContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">250dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="LogoImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="SessionContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SessionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1599F3</item>
    </style>

    <style name="ApplianceContainer">
        <item name="android:layout_width">800dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/bg_white_curved</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ApplianceCardContainer">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:background">@drawable/bg_station_card_blue</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="DefaultContainer">
    </style>
</resources>