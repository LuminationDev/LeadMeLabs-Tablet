<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SideMenuContainer">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">@drawable/bg_side_menu</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StationsContainer">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">500dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/bg_white_curved</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ScenesContainer">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/bg_white_curved</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LogoContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="LogoImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>
    <style name="DefaultContainer">
    </style>
</resources>