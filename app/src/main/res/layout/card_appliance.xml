<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
        <import type="com.lumination.leadmelabs.models.Appliance" />
        <variable
            name="appliance"
            type="com.lumination.leadmelabs.models.Appliance" />

        <variable
            name="isActive"
            type="androidx.lifecycle.MutableLiveData&lt;Boolean&gt;" />

        <variable
            name="icon"
            type="androidx.lifecycle.MutableLiveData&lt;Integer&gt;" />
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/appliance_card"
        style="@style/ApplianceCardContainer"
        android:background="@{isActive ? @drawable/bg_appliance_card_blue : @drawable/bg_appliance_card_grey, default=@drawable/bg_appliance_card_grey}"
        app:flexDirection="column"
        app:alignItems="flex_start"
        app:justifyContent="space_between">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/scene_icon"
            app:imageResource="@{icon}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="@{appliance.name, default=Scene_Example}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="@{appliance.type.equals(`blinds`) ? isActive ? `CLOSE` : `OPEN` : isActive ? `ON` : `OFF`}" />
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
</layout>