<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="selectedStation"
            type="com.lumination.leadmelabs.models.Station" />
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/station_single_fragment"
        style="@style/StationsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        app:flexDirection="column"
        tools:context=".ui.stations.StationsFragment">
        <com.google.android.flexbox.FlexboxLayout
            app:layout_flexShrink="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column">
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                app:alignItems="center"
                app:justifyContent="space_between">
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    app:flexDirection="column"
                    app:layout_flexShrink="0">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{selectedStation.name, default=Station}"
                        android:textFontWeight="600"
                        android:textSize="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control an individual station"
                        android:textSize="20sp"/>
                </com.google.android.flexbox.FlexboxLayout>
                <Button
                    android:id="@+id/new_session_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_add"
                    android:background="@android:color/transparent"
                    android:textColor="@color/blue"
                    android:text="New Session"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                android:paddingHorizontal="20dp">
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="column"
                    android:paddingRight="20dp">
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_curved"
                        android:padding="20dp"
                        app:flexDirection="row"
                        app:alignItems="center"
                        android:layout_marginBottom="20dp"
                        app:justifyContent="space_between">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:textFontWeight="600"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            android:text="Station Power"
                            android:drawableLeft="@drawable/icon_power"/>
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/power_toggle"
                            app:thumbTint="@color/blue"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </com.google.android.flexbox.FlexboxLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_curved"
                        android:padding="20dp"
                        android:layout_marginBottom="20dp"
                        app:flexDirection="column">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textFontWeight="600"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:drawablePadding="5dp"
                            android:text="Station Controls"
                            android:drawableLeft="@drawable/icon_volume"/>
                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:justifyContent="space_between">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/station_end_vr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/compound_end_session"
                                android:textColor="@color/blue"
                                android:text="End Session"
                                android:backgroundTint="@android:color/white"
                                android:elevation="0dp"
                                android:stateListAnimator="@null"
                                app:rippleColor="@color/grey"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/station_restart_vr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/compound_restart_session"
                                android:textColor="@color/blue"
                                android:text="Restart Session"
                                android:backgroundTint="@android:color/white"
                                android:elevation="0dp"
                                android:stateListAnimator="@null"
                                app:rippleColor="@color/grey"/>
                        </com.google.android.flexbox.FlexboxLayout>
                    </com.google.android.flexbox.FlexboxLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_curved"
                        android:padding="20dp"
                        app:flexDirection="column">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textFontWeight="600"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:drawablePadding="5dp"
                            android:text="Launch Website"
                            android:drawableLeft="@drawable/icon_volume"/>
                        <Button
                            android:id="@+id/enter_url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/blue"
                            android:text="@string/launch_url" />
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="column">
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_curved"
                        android:padding="20dp"
                        android:layout_marginBottom="20dp"
                        app:flexDirection="column">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:drawablePadding="5dp"
                            android:textFontWeight="600"
                            android:textColor="@color/black"
                            android:text="Volume"
                            android:drawableLeft="@drawable/icon_volume"/>
                        <com.google.android.material.slider.Slider
                            android:id="@+id/station_volume_slider"
                            app:thumbColor="@color/blue"
                            app:haloColor="@color/blue"
                            app:thumbStrokeColor="@color/blue"
                            app:trackColorActive="@color/blue"
                            app:trackColorInactive="@color/grey"
                            app:tickColorActive="@color/blue"
                            app:tickColorInactive="@color/grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:value="@{selectedStation.volume}"
                            android:valueFrom="0.0"
                            android:stepSize="1.0"
                            android:valueTo="100.0"/>
                    </com.google.android.flexbox.FlexboxLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_curved"
                        android:padding="20dp"
                        app:flexDirection="column">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:drawablePadding="5dp"
                            android:text="Game Control"
                            android:textFontWeight="600"
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/icon_volume"/>
                        <ImageView
                            android:visibility="@{(selectedStation.gameId != null &amp;&amp; selectedStation.gameId.length() > 0) ? View.VISIBLE : View.GONE}"
                            android:layout_marginVertical="5dp"
                            android:id="@+id/game_control_image"
                            android:layout_height="164dp"
                            android:layout_width="360dp"/>
                        <LinearLayout
                            android:visibility="@{(selectedStation.gameId != null &amp;&amp; selectedStation.gameId.length() > 0) ? View.GONE : View.VISIBLE}"
                            android:layout_marginVertical="5dp"
                            android:id="@+id/no_game_layout"
                            android:layout_height="164dp"
                            android:layout_width="360dp"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No game selected"/>
                        </LinearLayout>
                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flexDirection="row"
                            app:justifyContent="space_between">
                            <Button
                                android:id="@+id/station_stop_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/blue"
                                android:text="Stop"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/station_new_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue"
                                android:backgroundTint="@android:color/white"
                                android:elevation="0dp"
                                android:stateListAnimator="@null"
                                app:rippleColor="@color/grey"
                                android:text="New Game"/>
                        </com.google.android.flexbox.FlexboxLayout>
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</layout>