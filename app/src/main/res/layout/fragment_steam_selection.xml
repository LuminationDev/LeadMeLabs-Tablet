<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.lumination.leadmelabs.models.SteamApplication" />
        <import type="android.view.View"/>
        <variable
            name="steamApplicationList"
            type="java.util.ArrayList&lt;SteamApplication>" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <TextView
            style="@style/PageTitle"
            android:text="@string/vr_library_title"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/steam_selection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            app:flexDirection="column"
            tools:context=".ui.stations.SteamSelectionFragment">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="30dp"
                android:paddingStart="30dp"
                android:paddingEnd="100dp"
                app:alignItems="center"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:layout_flexShrink="0">

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="column">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VR Library"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick a game to play in VR"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </com.google.android.flexbox.FlexboxLayout>

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_white_curved"
                    android:clickable="true"
                    android:drawableStart="@drawable/icon_search"
                    android:drawablePadding="10dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:hint="Search"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="2dp"
                    android:textColorHint="@color/grey" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{steamApplicationList.size() > 0 ? View.GONE : View.VISIBLE}"
                app:alignItems="center"
                app:justifyContent="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="VR library loading..." />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/steam_list_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:visibility="@{steamApplicationList.size() > 0 ? View.VISIBLE : View.GONE}">

                <GridView
                    android:id="@+id/steam_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:clipToPadding="false"
                    android:columnWidth="300dp"
                    android:fadeScrollbars="false"
                    android:horizontalSpacing="30dp"
                    android:numColumns="auto_fit"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="20dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarThumbVertical="@color/blue"
                    android:scrollbarTrackVertical="@color/grey_medium"
                    android:smoothScrollbar="true"
                    android:verticalSpacing="30dp"
                    tools:listitem="@layout/steam_tile" />
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <ImageView
            style="@style/LogoImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/logo" />
    </RelativeLayout>
</layout>