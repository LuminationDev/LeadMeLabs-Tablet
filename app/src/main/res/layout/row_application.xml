<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    android:textAlignment="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/application_icon"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:contentDescription="@string/station_icon"
            android:foregroundGravity="center"
            android:padding="2dp"
            android:src="@drawable/icon_leadme"
            android:tintMode="src_atop" />

        <ImageView
            android:id="@+id/application_warning_icon"
            android:layout_width="@dimen/alerticon_size"
            android:layout_height="@dimen/alerticon_size"
            android:layout_gravity="top|end"
            android:contentDescription="@string/station_warning_icon"
            android:layout_margin="0dp"
            app:srcCompat="@drawable/icon_alert"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/selected_indicator"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/selected_indicator"
            android:backgroundTintMode="multiply"
            android:foregroundGravity="center"
            android:src="@drawable/icon_select_indicator"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="@dimen/alerticon_size"
            android:layout_height="@dimen/alerticon_size"
            android:layout_gravity="bottom|end"
            android:contentDescription="@string/station_status_icon"
            android:layout_margin="0dp"
            app:srcCompat="@drawable/icon_alert"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Hidden for now as cannot get the name easily-->
        <TextView
            android:id="@+id/application_name"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:foregroundGravity="center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="2"
            android:text="@string/application_name"
            android:textAlignment="center"
            android:textColor="@color/leadme_black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>