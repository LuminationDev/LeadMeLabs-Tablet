<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.lumination.leadmelabs.ui.sidemenu.SideMenuViewModel" />
        <import type="android.view.View"/>
        <variable
            name="sideMenu"
            type="com.lumination.leadmelabs.ui.sidemenu.SideMenuViewModel" />
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/side_menu_fragment"
        style="@style/SideMenuContainer"
        android:layout_width="200dp"
        android:paddingVertical="40dp"
        android:paddingHorizontal="70dp"
        app:flexDirection="column">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexDirection="column"
            app:alignItems="center"
            app:justifyContent="space_between">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/quickstart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_settings"
                    android:contentDescription="@string/navigation_button_settings" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_white"
                    android:contentDescription="@string/white_underline"
                    android:visibility="@{sideMenu.selectedIcon.equals(`quickstart`) ? View.VISIBLE : View.INVISIBLE}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/session_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_vr_white"
                    android:contentDescription="@string/session_button" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_white"
                    android:contentDescription="@string/white_underline"
                    android:visibility="@{sideMenu.selectedIcon.equals(`session`) ? View.VISIBLE : View.INVISIBLE}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/controls_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_controls"
                    android:contentDescription="@string/controls_button" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_white"
                    android:contentDescription="@string/white_underline"
                    android:visibility="@{sideMenu.selectedIcon.equals(`controls`) ? View.VISIBLE : View.INVISIBLE}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/navigation_button_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_settings"
                    android:contentDescription="@string/navigation_button_settings" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_white"
                    android:contentDescription="@string/white_underline"
                    android:visibility="@{sideMenu.selectedIcon.equals(`navigation`) ? View.VISIBLE : View.INVISIBLE}"/>
            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:justifyContent="flex_end"
            app:alignItems="center"
            app:flexDirection="column">

            <ImageView
                android:id="@+id/dashboard_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_home"
                android:contentDescription="@string/dashboard_button" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_white"
                android:contentDescription="@string/white_underline"
                android:visibility="@{sideMenu.selectedIcon.equals(`dashboard`) ? View.VISIBLE : View.INVISIBLE}"/>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</layout>