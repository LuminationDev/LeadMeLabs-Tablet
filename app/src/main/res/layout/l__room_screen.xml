<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/leadme_white"
        app:cardBackgroundColor="@color/leadme_white"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/leadme_icon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/back_arrow"
            android:cropToPadding="false"
            android:foregroundGravity="center"
            android:minWidth="3dp"
            android:paddingTop="8dp"
            android:paddingBottom="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back_arrow"
            tools:src="@drawable/ic_back_arrow" />

        <ImageView
            android:id="@+id/menu_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/menu_icon"
            android:focusable="true"
            android:foregroundGravity="top|left"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_menu"
            android:visibility="visible"
            tools:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/light_switch_btn"
            android:layout_width="@dimen/pushbtn_size"
            android:layout_height="@dimen/pushbtn_size"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_square"
            android:drawableTop="@drawable/core_add_station"
            android:backgroundTint="@color/leadme_white"
            android:drawablePadding="-6dp"
            android:elevation="15dp"
            android:includeFontPadding="false"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:text="@string/light_switch"
            android:textAllCaps="false"
            android:textColor="@color/leadme_black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>