<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="58dp"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:flexDirection="column">

            <TextView
                style="@style/HeadingTitle"
                android:id="@+id/welcome_message"
                android:text="Welcome!"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/date_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="Tuesday 26th April 2022"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/station_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:flexDirection="column">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/grey_titles"
                android:text="Quick Actions" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/vr_mode_button"
                    style="@style/ActionCard"
                    android:layout_marginStart="30dp"
                    app:flexDirection="row">

                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:contentDescription="vr_mode_icon"
                        android:src="@drawable/dashboard_vr_mode" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VR Mode"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Launch stations"
                            android:textSize="11sp" />
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/new_session_button"
                    style="@style/ActionCard"
                    android:layout_marginStart="10dp"
                    app:flexDirection="row">

                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:contentDescription="start_icon"
                        android:src="@drawable/dashboard_new_session" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Session"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open experience"
                            android:textSize="11sp" />
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/end_session_button"
                    style="@style/ActionCard"
                    android:layout_marginStart="10dp"
                    app:flexDirection="row">

                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:contentDescription="stop_icon"
                        android:src="@drawable/dashboard_end_session" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Session"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Close experience"
                            android:textSize="11sp" />
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/restart_button"
                    style="@style/ActionCard"
                    android:layout_marginStart="10dp"
                    app:flexDirection="row"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:contentDescription="restart_icon"
                        android:src="@drawable/dashboard_restart" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <TextView
                            android:id="@+id/restart_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restart Lab"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/restart_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reboot stations"
                            android:textSize="11sp" />
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/classroom_mode_button"
                    style="@style/ActionCard"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:flexDirection="row"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:contentDescription="classroom_icon"
                        android:src="@drawable/dashboard_class_mode" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class Mode"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Turn off stations"
                            android:textSize="11sp" />
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <RelativeLayout
            android:id="@+id/stations"
            android:minHeight="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/system_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/identify_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="80dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/identify_ripple_blue"
            app:flexDirection="row"
            app:justifyContent="center"
            app:alignItems="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/session_identify_small"
                android:textAllCaps="false"
                android:contentDescription="identify_icon" />
        </com.google.android.flexbox.FlexboxLayout>


    </RelativeLayout>

</RelativeLayout>