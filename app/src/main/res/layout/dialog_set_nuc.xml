<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:flexDirection="column"
    app:alignItems="center"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="600"
            android:text="Current NUC Address: "/>
        <TextView
            android:id="@+id/nuc_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="not set"/>
    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Set NUC Address">
    </TextView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/scan_nuc_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp"
        android:textColor="@color/blue"
        android:backgroundTint="@android:color/white"
        app:rippleColor="@color/grey"
        android:stateListAnimator="@null"
        app:backgroundTint="@color/white"
        android:text="Auto-scan"/>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="column"
        app:alignItems="center"
        app:justifyContent="center">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="140dp"
            android:layout_marginVertical="10dp"
            android:background="@color/grey"
            app:flexDirection="column"
            app:alignItems="center"
            app:justifyContent="center"/>
        <TextView
            android:layout_marginTop="-27dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"/>
    </com.google.android.flexbox.FlexboxLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manually enter the IP address of the NUC">
    </TextView>
    <EditText
        android:id="@+id/nuc_address_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="xxx.xxx.xxx.xxx">
    </EditText>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/set_nuc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp"
        android:textColor="@color/blue"
        android:backgroundTint="@android:color/white"
        app:rippleColor="@color/grey"
        android:stateListAnimator="@null"
        android:text="Update"/>

</com.google.android.flexbox.FlexboxLayout>