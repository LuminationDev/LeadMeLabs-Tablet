<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="video"
            type="com.lumination.leadmelabs.models.Video" />
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:background="@drawable/ripple_white_rounded_border"
        android:clickable="true"
        android:focusable="true"
        app:justifyContent="flex_start"
        app:flexDirection="row"
        app:alignItems="center">

        <androidx.cardview.widget.CardView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/placeholder_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_back_circle"
                android:contentDescription="backdrop_image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{video.name, default=Sample}"/>

    </com.google.android.flexbox.FlexboxLayout>
</layout>
