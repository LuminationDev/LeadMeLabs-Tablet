<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="keyboard"
            type="com.lumination.leadmelabs.ui.keyboard.KeyboardViewModel" />
    </data>

    <!--Row #4 - Letters-->
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:flexDirection="row"
        app:justifyContent="space_between">

        <!--Task Manager-->
        <com.google.android.flexbox.FlexboxLayout
            style="@style/KeyboardControlStyle"
            android:layout_width="130dp"
            android:onClick="@{() -> keyboard.simulateKeyboardControl(`TaskManager`)}"
            app:alignItems="center"
            app:justifyContent="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/task_manager" />

        </com.google.android.flexbox.FlexboxLayout>

        <!--Windows Key-->
        <com.google.android.flexbox.FlexboxLayout
            style="@style/KeyboardControlStyle"
            android:layout_width="90dp"
            android:onClick="@{() -> keyboard.simulateKeyboardControl(`Windows`)}"
            app:alignItems="center"
            app:justifyContent="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/windows" />

        </com.google.android.flexbox.FlexboxLayout>

        <!--Space-->
        <com.google.android.flexbox.FlexboxLayout
            style="@style/KeyboardControlStyle"
            android:layout_width="350dp"
            android:onClick="@{() -> keyboard.simulateKeyboardControl(`Space`)}"
            app:alignItems="center"
            app:justifyContent="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/space" />

        </com.google.android.flexbox.FlexboxLayout>

        <!--Arrow Left-->
        <com.google.android.flexbox.FlexboxLayout
            style="@style/KeyboardLetterStyle"
            android:onClick="@{() -> keyboard.simulateKeyboardControl(`ArrowLeft`)}"
            app:alignItems="center"
            app:justifyContent="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/arrow_icon"
                android:rotation="270"
                android:src="@drawable/keyboard_arrow" />
        </com.google.android.flexbox.FlexboxLayout>

        <!--Arrow Up-->
        <com.google.android.flexbox.FlexboxLayout
            style="@style/KeyboardLetterStyle"
            android:onClick="@{() -> keyboard.simulateKeyboardControl(`ArrowUp`)}"
            app:alignItems="center"
            app:justifyContent="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/arrow_icon"
                android:src="@drawable/keyboard_arrow" />
        </com.google.android.flexbox.FlexboxLayout>

        <!--Arrow Down-->
        <com.google.android.flexbox.FlexboxLayout
            style="@style/KeyboardLetterStyle"
            android:onClick="@{() -> keyboard.simulateKeyboardControl(`ArrowDown`)}"
            app:alignItems="center"
            app:justifyContent="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/arrow_icon"
                android:rotation="180"
                android:src="@drawable/keyboard_arrow" />
        </com.google.android.flexbox.FlexboxLayout>

        <!--Arrow Right-->
        <com.google.android.flexbox.FlexboxLayout
            style="@style/KeyboardLetterStyle"
            android:onClick="@{() -> keyboard.simulateKeyboardControl(`ArrowRight`)}"
            app:alignItems="center"
            app:justifyContent="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/arrow_icon"
                android:rotation="90"
                android:src="@drawable/keyboard_arrow" />
        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>

</layout>
