<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="selectedStation"
            type="com.lumination.leadmelabs.models.stations.ContentStation" />
    </data>

    <!-- CONTROL DEVICES layout content -->
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="510dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_white_curved"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        app:alignItems="center"
        app:justifyContent="space_around"
        app:layout_flexGrow="1"
        app:flexDirection="row">

        <!--KEYBOARD CONNECTION-->
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexDirection="column">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="keyboard"
                android:src="@drawable/control_device_keyboard"
                app:layout_flexShrink="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:text="Keyboard"/>
        </com.google.android.flexbox.FlexboxLayout>

        <!--MOUSE CONNECTION-->
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexDirection="column">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="mouse"
                android:src="@drawable/control_device_mouse"
                app:layout_flexShrink="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:text="Mouse"/>
        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>
</layout>
