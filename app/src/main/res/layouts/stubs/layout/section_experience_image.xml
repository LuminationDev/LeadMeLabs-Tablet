<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="selectedApplication"
            type="com.lumination.leadmelabs.models.applications.Application" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@drawable/card_white_border_gray">

        <FrameLayout
            android:layout_width="315dp"
            android:layout_height="147dp">

            <ImageView
                android:id="@+id/placeholder_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/experience_preview"
                android:background="@drawable/image_background"
                android:clipToOutline="true" />

            <LinearLayout
                android:id="@+id/progress_spinner_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            app:flexDirection="column">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="1dp"
                android:text="@{selectedApplication.name, default=`Google Earth VR`}"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:ignore="RtlSymmetry" />

            <include layout="@layout/section_experience_tags"/>

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

</layout>
