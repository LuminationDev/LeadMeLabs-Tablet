<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="library"
            type="com.lumination.leadmelabs.ui.library.LibraryViewModel" />
        <variable
            name="filter"
            type="java.lang.String" />
        <variable
            name="filterIcon"
            type="android.graphics.drawable.Drawable" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="@{() -> library.toggleFilter(filter)}"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="5dp"
            android:paddingEnd="-5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@{library.subjectFilters.contains(filter) ? @drawable/ripple_gray_rounded : @drawable/ripple_white_rounded, default=@drawable/ripple_white_rounded}"
            app:alignItems="center"
            app:flexDirection="row">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@{filterIcon, default=@drawable/filter_icon_design_tech}"
                android:contentDescription="Subject icon"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:textSize="15sp"
                android:text="@{filter}"
                android:textColor="@color/black"
                app:layout_flexGrow="1"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:checked="@{library.subjectFilters.contains(filter)}"
                android:background="@null"/>

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
</layout>
